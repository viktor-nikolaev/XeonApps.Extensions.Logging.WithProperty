<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>XeonApps.Extensions.Logging.WithProperty</PackageId>
        <Authors>Viktor Nikolaev</Authors>
        <Description>
            This package allows you to add custom properties to Microsoft's logger when using structured logging
        </Description>
        <PackageTags>logging;structured logging;logger;microsoft</PackageTags>
        <RepositoryUrl>https://github.com/viktor-nikolaev/XeonApps.Extensions.Logging.WithProperty</RepositoryUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RootNamespace>XeonApps.Extensions.Logging.WithProperty</RootNamespace>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.0.0" />
        <PackageReference Include="Nerdbank.GitVersioning" Version="3.1.91" PrivateAssets="all" />
    </ItemGroup>

</Project>
